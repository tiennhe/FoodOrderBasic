<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp">
    <LinearLayout
        android:layout_margin="10dp"
        android:gravity=""
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã đơn hàng:"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/txtmadonhangbilldetailadmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "0987654"
                android:paddingLeft="10dp"
                android:textStyle="bold"

                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên:"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/txthotenbilldetailadmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "Nguyễn văn a"
                android:paddingLeft="10dp"
                android:textStyle="bold"

                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại:"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/txtsdtbilldetailadmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "0987654321"
                android:paddingLeft="10dp"
                android:textStyle="bold"

                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ nhập hàng:"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/txtadressbilldetailadmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "Lập thạch, Vĩnh Phúc"
                android:paddingLeft="10dp"
                android:textStyle="bold"

                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thực đơn:"
                android:textStyle="bold"

                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtlistproductadmin"
                android:text=""
                android:textStyle="bold"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày đặt hàng:"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "22/9/2023, 8:30"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:id="@+id/txtdatebilldetailadmin"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền:"
                android:textColor="#FB1D1D"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "304000 VNĐ"
                android:textColor="#FB1D1D"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:id="@+id/txttongtienbilldetailadmin"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toán:"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/txtphuongthucbilldetailadmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "Tiền mặt"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txtststusbilldetail_admin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Chờ Xác nhận"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/custombuttom_addtocart">

        </TextView>

        <Button
            android:id="@+id/btnxacnhandonhang_admin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:text="Xác nhận đơn hàng hàng"
            android:background="@drawable/custombuttom_addtocart"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>