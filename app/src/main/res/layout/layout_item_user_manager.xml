<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:stretchColumns="1,2,3"
    android:layout_height="wrap_content">

    <TableRow>
        <TextView
            android:id="@+id/tvUid"
            android:text="1"
            android:textStyle="bold"
            android:textSize="20sp"

            android:padding="10dp"
            android:layout_column="1"/>
        <TextView
            android:layout_column="1"
            android:id="@+id/tvEmail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Đây là một văn bản dài, nếu nó vượt quá chiều rộng của View, nó sẽ tự động xuống dòng."
            />
   <Button
       android:text="Disable Acount"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textStyle="bold"
       android:id="@+id/btndisableacount"
       android:textColor="@color/white"
       android:background="@drawable/custombuttom_delete"
       android:layout_gravity="center"
       android:textAllCaps="false"/>
    </TableRow>

</TableLayout>