<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_white_conner_16dp"
    android:layout_margin="16dp">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:text="Edit profile"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:textSize="16sp"
    android:gravity="center"
    android:background="@drawable/bg_yellow_topleft_topright"/>
    



            <RadioGroup
                android:id="@+id/groupgioitinh"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content" >


                    <RadioButton
                        android:id="@+id/rdoNam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Nam" />

                    <RadioButton
                        android:id="@+id/rdoNu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nữ" />

            </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnhuygioitinh"
            android:layout_width="0dp"
            android:background="@drawable/custombuttom_delete"
            android:text="Hủy"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="0dp"
            android:id="@+id/btnupdategioitinh"
            android:background="@drawable/custombuttom_addtocart"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textAllCaps="false"
            android:text="Update"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>