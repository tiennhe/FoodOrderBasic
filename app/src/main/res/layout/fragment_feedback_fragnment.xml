<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragnemt.FeedbackFragnment">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rclmessages"
        android:layout_above="@+id/layoutsendmessage"
        />

    <LinearLayout
        android:gravity="center"
        android:id="@+id/layoutsendmessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/edtmessages"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:background="@drawable/custom_edittext"
            android:hint="Enter Your Messages"
            android:textAllCaps="false"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/imgsendmessages"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:src="@drawable/paper_plane" />
    </LinearLayout>

</RelativeLayout>